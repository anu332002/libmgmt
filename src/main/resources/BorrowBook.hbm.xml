<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="edu.neu.user.BorrowBook" table="borrowbook">
	    <id name="borrowbookId" type="java.lang.Long">
	        <column name="borrowbookId" />
			<generator class="native" />
	    </id>
	    <property name="borrowDate" type="java.util.Date">
	        <column name="borrowDate"/>
	    </property>
	    <property name="bookId" type="java.lang.Long">
	        <column name="bookId"/>
	    </property>
	    <property name="userId" type="java.lang.Long">
	        <column name="userId"/>
	    </property>
	    <property name="status" type="java.lang.Integer" length="11">
	        <column name="status"/>
	    </property>
	</class>
</hibernate-mapping>